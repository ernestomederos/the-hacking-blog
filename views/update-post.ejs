<%-include ("partials/header.ejs") %>

    <div class="update-post post">
        <div>
            <h2>
                Help us to build a better community!
            </h2>
            <img src="assets/Hello-world.png" alt="hacker-two" height="350">
        </div>
        <div>
            <form class="new-post-form" action="/update-post" method="POST">
                <input type="text" id="title" name="pTitle" value="<%= post ? post.title : '' %>"></input>
                <textarea id="text" name="pText"><%= post ? post.text : '' %></textarea>
                <button type="submit" class="submit-btn">Update Post</button>
            </form>

        </div>

    </div>



    <%-include ("partials/footer.ejs") %>